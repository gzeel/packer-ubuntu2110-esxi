        username: vagrant
        password: '$6$rounds=4096$vMgQ796Fm28f2QaE$g1pg8NNDCVQikPZr3YF4W8u5VkWGR6kCky6qO5L0ODpPCJuwOfznwBeUz8.8VhW88VV3yN11KhKnw0O4W3hpK/'

